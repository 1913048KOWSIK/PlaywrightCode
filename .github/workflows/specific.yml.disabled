name: Playwright Tests

on:
  push:
    paths:
      - 'tests/Ajensia/AssetManagement/**'  # Trigger when any file in this folder changes
  pull_request:
    paths:
      - 'tests/Ajensia/AssetManagement/**'


jobs:
  run-playwright-tests:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repo
        uses: actions/checkout@v3

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: 18

      - name: Install dependencies
        run: npm ci

      - name: Install Playwright browsers
        run: npx playwright install --with-deps

      - name: Run Playwright tests in Approvals folder
        run: npx playwright test tests/Ajensia/AssetManagement/

      - name: Upload Playwright HTML report
        uses: actions/upload-artifact@v4
        with:
          name: playwright-html-report
          path: playwright-report
